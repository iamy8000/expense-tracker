{{!-- <div class="card-body"> --}}
<h1 class="mb-1 card-title">請輸入你的支出</h1>
<div class="container">
  <div class="row">
    <div class="col-10 col-md-8 mx-auto">
      <form action="/records" method="POST" id="newPageForm">
        <div class="form-group row">
          <label for="inputName" class="col-sm-2 col-form-label">名稱：</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName" name="name" placeholder="項目名稱">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputMerchant" class="col-sm-2 col-form-label">店家：</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inputMerchant" name="merchant" placeholder="店家名稱">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputDate" class="col-sm-2 col-form-label">日期：</label>
          <div class="col-sm-10">
            <input type="date" class="form-control" id="inputDate" name="date" placeholder="花費日期">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputCategory" class="col-sm-2 col-form-label">類別：</label>
          <div class="col-sm-10">
            <select class="form-control" name="category" id="inputCategory">
              {{#each category}}
              <option value="{{this.name}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputAmount" class="col-sm-2 col-form-label">金額：</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="inputAmount" name="amount" placeholder="金額">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">新增支出</button>
      </form>
    </div>
  </div>
</div>
