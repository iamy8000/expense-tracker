{{!-- <div class="card-body"> --}}
<div class="row" id="dashboard">
  <h3>CREATE | 新增支出</h1>
</div>

<div class="row" id="invoice">
  <div class="col-12 col-md-10 mx-auto">
    <form action="/records" method="POST" id="newPageForm">
      <div class="form-group">
        <label for="inputName" class="col-form-label">
          <span class="text-secondary">
            名稱：
          </span>
        </label>
        <input type="text" class="form-control" id="inputName" name="name" placeholder="項目名稱">
      </div>
      <div class="form-group">
        <label for="inputMerchant" class="col-form-label">
          <span class="text-secondary">
            店家：
          </span>
        </label>
        <input type="text" class="form-control" id="inputMerchant" name="merchant" placeholder="店家名稱">
      </div>
      <div class="form-group">
        <label for="inputDate" class="col-form-label">
          <span class="text-secondary">
            日期：
          </span>
        </label>
        <input type="date" class="form-control" id="inputDate" name="date" placeholder="花費日期">
      </div>
      <div class="form-group">
        <label for="inputCategory" class="col-form-label">
          <span class="text-secondary">
            類別：
          </span>
        </label>
        <select class="form-control" name="category" id="inputCategory">
          {{#each category}}
          <option value="{{this.name}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="inputAmount" class="col-form-label">金額：</label>
        <input type="number" class="form-control" id="inputAmount" name="amount" placeholder="金額">
      </div>
      <button type="submit" class="btn btn-primary">新增支出</button>
    </form>
  </div>
</div>