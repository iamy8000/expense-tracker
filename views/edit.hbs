<h3 class="mb-3 card-title text-center">請輸入你的支出</h1>
  {{!-- <div class="container"> --}}
  <div class="row">
    <div class="col-10 col-md-8 mx-auto">
      <form action="/records/{{record._id}}?_method=PUT" method="POST">
        <div class="form-group row">
          <label for="inputName" class="col-sm-2 col-form-label">名稱：</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName" name="name" value="{{record.name}}"
              placeholder="項目名稱">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputDate" class="col-sm-2 col-form-label">日期：</label>
          <div class="col-sm-10">
            <input type="date" class="form-control" id="inputDate" name="date" value="{{record.date}}"
              placeholder="花費日期">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputCategory" class="col-sm-2 col-form-label">類別：</label>
          <div class="col-sm-10">
            <select class="form-control" name="category" value="{{record.category}}" id="inputCategory">
              {{#each category}}
              <option value="{{this.name}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputAmount" class="col-sm-2 col-form-label">金額：</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="inputAmount" name="amount" value="{{record.amount}}"
              placeholder="金額">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">儲存修改</button>
      </form>
    </div>
    {{!-- </div> --}}
  </div>