<div class="row" id="dashboard">
  <h3>Edit | 修改</h1>
</div>

<div class="row" id="invoice">
  <div class="col-12 col-md-10 mx-auto">
    <form action="/records/{{record._id}}?_method=PUT" method="POST" id="editPageForm">
      <div class="form-group">
        <label for="inputName" class="col-form-label">
          <span class="text-secondary">
            名稱：
          </span>
        </label>
        <input type="text" class="form-control" id="inputName" name="name" value="{{record.name}}" placeholder="項目名稱">
      </div>
      <div class="form-group">
        <label for="inputMerchant" class="col-form-label">
          <span class="text-secondary">
            店家：
          </span>
        </label>
        <input type="text" class="form-control" id="inputMerchant" name="merchant" value=" {{record.merchant}}"
          placeholder="店家名稱">
      </div>
      <div class="form-group">
        <label for="inputDate" class="col-form-label">
          <span class="text-secondary">
            日期：
          </span>
        </label>
        <input type="date" class="form-control" id="inputDate" name="date" value="{{record.date}}" placeholder="花費日期">
      </div>
      <div class="form-group">
        <label for="inputCategory" class="col-form-label">
          <span class="text-secondary">
            類別：
          </span>
        </label>
        <select class="form-control" name="category" value="{{record.category}}" id="inputCategory">
          {{#each category}}
          <option value="{{this.name}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="inputAmount" class="col-form-label">金額：</label>
        <input type="number" class="form-control" id="inputAmount" name="amount" value="{{record.amount}}"
          placeholder="金額">
      </div>
      <button type="submit" class="btn btn-primary">儲存修改</button>
    </form>
  </div>
</div>